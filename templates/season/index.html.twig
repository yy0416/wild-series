{% extends 'base.html.twig' %}

{% block title %}Hello SeasonController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div>
		{{ program.title}}
	</div>

	<div class="example-wrapper">
		{% for season in program.seasons %}
			<p>
				<a>Saison
					{{ season.number }}</a>
			</p>
		{% endfor %}
	</div>

	<a href="{{ path('program_index') }}">Retour Ã  la liste des programmes</a>

{% endblock %}
