{% extends 'base.html.twig' %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<h1>{{ category.name }}</h1>

	{% if programs|length > 0 %}
		<ul>
			{% for program in programs %}
				<li>
					<h2>{{ program.title }}</h2>
					<p>{{ program.synopsis }}</p>
					<p>ID :
						{{ program.id }}</p>
					<a href="{{ path('program_show', {'id': program.id}) }}">Voir la fiche</a>
				</li>
			{% endfor %}
		</ul>
	{% else %}
		<p>Aucune série trouvée.</p>
	{% endif %}
{% endblock %}
